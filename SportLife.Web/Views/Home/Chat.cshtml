@model  List<SportLife.Dal.DomainModels.ChatMessage>

@using SportLife.Models.Models

@{
    ViewBag.Title = "Chat";
    Layout = "~/Views/Shared/_LayoutResponsive.cshtml";

    ViewBag.ModalTitle = "Please login";
    ViewBag.Content = "If you want to join in, please login in !";
    UserViewModel user = Session["user"] as UserViewModel;
    var ema = user != null ? user.Email.Replace(".", "").TakeWhile(ss => ss != '@') : string.Empty;
    var showPopup = user.Email; //user != null ? user.Username ?? String.Concat(ema) : string.Empty;
}

<style>
    .conversation-wrap {
        box-shadow: -2px 0 3px #ddd;
        padding: 0;
        max-height: 400px;
        overflow: auto;
    }

    .conversation {
        padding: 5px;
        border-bottom: 1px solid #ddd;
        margin: 0;
    }

    .message-wrap {
        box-shadow: 0 0 3px #ddd;
        padding: 0;
    }

    .msg {
        padding: 5px;
        /*border-bottom:1px solid #ddd;*/
        margin: 0;
    }

    .msg-wrap {
        padding: 10px;
        max-height: 400px;
        overflow: auto;
    }

    .time {
        color: #bfbfbf;
    }

    .send-wrap {
        border-top: 1px solid #eee;
        border-bottom: 1px solid #eee;
        padding: 10px;
        /*background: #f8f8f8;*/
    }

    .send-message {
        resize: none;
    }

    .highlight {
        background-color: #f7f7f9;
        border: 1px solid #e1e1e8;
    }

    .send-message-btn {
        border-top-left-radius: 0;
        border-top-right-radius: 0;
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
    }

    .btn-panel {
        background: #f7f7f9;
    }

